{
  "include": ["global.d.ts", "packages", "types", "test", "web-see2-demo"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES6",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"],
      "@websee2/*": ["packages/*/src"]
    },
    "jsx": "react",
    "esModuleInterop": true
  }
}
